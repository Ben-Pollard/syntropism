{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Orchestrator",
            "type": "debugpy",
            "request": "launch",
            "module": "syntropism.cli",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DEBUG": "1"
            }
        },
        {
            "name": "Debug Agent (Attach)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/workspace"
                }
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Agent (Listen)",
            "type": "debugpy",
            "request": "listen",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/workspace"
                }
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        }
    ]
}
